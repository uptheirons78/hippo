{
  "name": "hippo",
  "version": "1.0.0",
  "description": "Personal WordPress starter theme for 2023",
  "main": "index.js",
  "scripts": {
    "dev": "npm-run-all --parallel sync start",
    "sync": "browser-sync start -p 'personal.local' --files '**/*.php' 'build/*.js' 'build/*.css'",
    "build": "wp-scripts build",
    "start": "wp-scripts start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uptheirons78/hippo.git"
  },
  "keywords": [
    "WordPress",
    "WordPress Theme Development"
  ],
  "author": "Mauro Bono",
  "license": "GPL-2.0-or-later",
  "bugs": {
    "url": "https://github.com/uptheirons78/hippo/issues"
  },
  "homepage": "https://github.com/uptheirons78/hippo#readme",
  "dependencies": {
    "@wordpress/scripts": "^24.6.0",
    "browser-sync": "^2.27.10",
    "npm-run-all": "^4.1.5"
  }
}
